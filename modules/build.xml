	</target>

	<target name="healthcheck-va-war" description="Build the OCSP Helthcheck WAR">
		<ant antfile="${mod.healthcheck-war.path}/build.xml" target="va-build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="clearcache-ejbca-war" description="Build the EJBCA ClearCache WAR">
		<ant antfile="${mod.clearcache-war.path}/build.xml" target="ejbca-build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="va-ejbca-war" description="Build the EJBCA OCSP WAR">
		<ant antfile="${mod.va-war.path}/build.xml" target="ejbca-build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="va-va-war" description="Build the External OCSP Responder OCSP WAR">
		<ant antfile="${mod.va-war.path}/build.xml" target="va-build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="renew-war" description="Build the Renew WAR">
		<ant antfile="${mod.renew-war.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="scep-war" description="Build the SCEP WAR">
		<ant antfile="${mod.scep-war.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="webdist-war" description="Build the WebDist WAR">
		<ant antfile="${mod.webdist-war.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="ejbca-ejb" description="Build EJBCA EJB module">
		<ant antfile="${mod.ejbca-ejb.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="va-ejb" description="Build OCSP EJB module">
		<ant antfile="${mod.ejbca-ejb.path}/build.xml" target="build-va" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
