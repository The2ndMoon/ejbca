	<target name="externalra-gui" description="Build the EJBCA External RA StandAlone GUI WAR">
		<ant antfile="${mod.externalra-gui.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="batchenrollment-gui" description="Build the EJBCA Batch Enrollment StandAlone GUI JAR">
		<ant antfile="build.xml" dir="${mod.batchenrollment-gui.path}" target="jar" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="admin-gui" description="Build the EJBCA Admin GUI WAR">
		<ant antfile="${mod.admin-gui.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="publicweb-gui" description="Build the EJBCA Public Web GUI WAR">
		<ant antfile="${mod.publicweb-gui.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
	</target>

	<target name="cmp-war" description="Build the CMP WAR">
		<ant antfile="${mod.cmp-war.path}/build.xml" target="build" inheritall="false"><property name="runoncesetup.hasrun" value="true"/></ant>
