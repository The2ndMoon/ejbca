        </attributes>
    </entity>
    <entity class="org.ejbca.core.ejb.hardtoken.HardTokenIssuerData" access="PROPERTY">
        <attributes>
            <basic name="dataUnsafe">
                <column name="data" column-definition="BYTEA"/>
