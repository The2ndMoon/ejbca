            </basic>
        </attributes>
    </entity>
    <entity class="org.ejbca.core.ejb.log.LogConfigurationData" access="PROPERTY">
        <attributes>
            <basic name="logConfigurationUnsafe">
                <column name="logConfiguration" column-definition="BYTEA"/>
                <lob/>
            </basic>
        </attributes>
    </entity>

</entity-mappings>
