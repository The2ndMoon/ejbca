<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">

    <!-- 
         This file contains mappings specific to MySQL.
         
         Hibernate maps boolean on MySQL to BIT. See http://opensource.atlassian.com/projects/hibernate/browse/HHH-468 . We will use TINYINT(4) instead.
         Hibernate always maps CLOB on MySQL to LONGTEXT. See http://opensource.atlassian.com/projects/hibernate/browse/HHH-3440 .
    -->

    <entity class="org.ejbca.core.ejb.authorization.AccessRulesData" access="PROPERTY">
        <attributes>
            <basic name="isRecursive"><column name="isRecursive" column-definition="TINYINT(4)"/></basic>
        </attributes>
    </entity>
    <entity class="org.ejbca.core.ejb.hardtoken.HardTokenPropertyData" access="PROPERTY">
        <attributes>
            <basic name="id"><column name="id" column-definition="VARCHAR(80) BINARY"/></basic>
        </attributes>
    </entity>
    <entity class="org.ejbca.core.ejb.keyrecovery.KeyRecoveryData" access="PROPERTY">
        <attributes>
            <basic name="markedAsRecoverable"><column name="markedAsRecoverable" column-definition="TINYINT(4)"/></basic>
        </attributes>
    </entity>
 
</entity-mappings>
