            <basic name="expiredate">
                <column name="expiredate" column-definition="DECIMAL(18,0)" />
            </basic>
            <basic name="requestdate">
                <column name="requestdate" column-definition="DECIMAL(18,0)" />
            </basic>
        </attributes>
    </entity>
