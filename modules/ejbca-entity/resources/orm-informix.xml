<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">

    <!-- This is based on the Informix CMP:
        boolean: BOOLEAN (Informix92, SMALLINT in InformixDB)
        long: DECIMAL(18,0) (even though NUMERIC(18,0) was specified in the CMP mapping..)
        "CLOB": TEXT
        Object: BLOB
    -->

    <entity class="org.ejbca.core.ejb.authorization.AccessRulesData" access="PROPERTY">
        <attributes>
            <basic name="isRecursive">
                <column name="isRecursive" column-definition="BOOLEAN"/>
            </basic>
        </attributes>
    </entity>
